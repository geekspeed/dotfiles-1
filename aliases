# cd
alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias ga='git add -p'
alias gb='git branch'
alias gc='git commit -v'
alias gco='git checkout'
alias gd='git diff'
alias gp='git pull'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias gs='git status -sb'

# bundler
alias b="bundle"
alias bi="b install --path vendor"
alias bu="b update"
alias be="b exec"

# ruby
alias rake='be rake'
alias rspec='be rspec --color'


