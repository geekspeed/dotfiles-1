# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias ga='git add -p'
alias gl="git log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gb='git branch'
alias gc='git commit -v'
alias gco='git checkout'
alias gd='git diff'
alias gdm='git diff origin/master'
alias gp='git pull'
alias gpr='git pull --rebase'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias gs='git status -sb'

# bundler
alias b='bundle'
alias be='bundle exec'

# ruby
alias r='be rake'
alias s='be rspec'
alias rails='be rails'
alias p='pry -r ./config/environment'
alias cap='be cap'
alias v='be vagrant'
alias rc='r console'
alias rs='r server'
alias fs='foreman start'

# ctags
alias ctags='ctags -R --exclude=.git --exclude=reports --exclude=tmp --exclude=vendor --exclude=coverage .'
